<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="12dp"
    app:cardElevation="6dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/single_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/single_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/temp_image" />

        <TextView
            android:id="@+id/single_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Sample Text"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="@id/single_item_layout"
            app:layout_constraintRight_toRightOf="@id/single_item_layout"
            app:layout_constraintTop_toBottomOf="@id/single_item_image" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>